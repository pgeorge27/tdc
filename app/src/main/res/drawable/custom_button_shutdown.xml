<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="10dip" />
             <stroke android:width="0dip" android:color="#171c20" />
             <gradient  android:angle="-90"  android:startColor="#B00000" android:endColor="#EA5A5A"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="10dip" />
             <stroke android:width="0dip" android:color="#B00000" />
             <solid  android:color="#EA5A5A"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="10dip" />
             <stroke android:width="0dip" android:color="#171c20" />
             <gradient  android:angle="-90"  android:startColor="#EA5A5A" android:endColor="#B00000" />
         </shape>
     </item>
</selector>
