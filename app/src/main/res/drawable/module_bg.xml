<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffdddddd" android:startColor="#ffababab" android:type="linear" />

                    <stroke android:width="1dp" android:color="#ffababab" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/ic_downarrow" />
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffababab" android:startColor="#ffdddddd" android:type="linear" />

                    <stroke android:width="1dp" android:color="#ffababab" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/ic_downarrow" />
            </item>
        </layer-list>
    </item>

</selector>