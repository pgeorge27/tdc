<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pProgress"
        android:layout_gravity="right"
        android:progressDrawable="@drawable/progressbar_custom"
        android:progress="0"
        android:minHeight="15dp"
        android:maxHeight="15dp"
        android:indeterminate="false"
        android:elevation="4dp"
        android:max="2"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iMap"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignBottom="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:scaleType="fitXY"
        android:background="@drawable/borde_1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:background="@drawable/borde_1"
        android:layout_below="@+id/pProgress">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle"
            android:id="@+id/tAddress"
            android:background="#40000000"
            android:textColor="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station2"
            android:id="@+id/tStation"
            android:background="#40000000"
            android:textColor="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preventivo"
            android:id="@+id/tType"
            android:background="#40000000"
            android:textColor="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="60dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bComplete"
        android:background="@drawable/custom_button_rounded_green"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:src="@drawable/ic_action_complete_activity"
        android:layout_gravity="right"
        android:clickable="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignBottom="@+id/linearLayout4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fillViewport="false"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="6dp"
        android:background="@drawable/borde_1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lActivities"
            android:padding="8dp" />
    </ScrollView>

</RelativeLayout>